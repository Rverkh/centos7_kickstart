lang en_GB.UTF-8
keyboard us
timezone Europe/Moscow
rootpw --iscrypted $1$sN5kJMGZ$NfV7.C44zbkJQyA6PiV910

clearpart --all --initlabel --drives=vda
ignoredisk --only-use=vda
bootloader  --location=mbr --driveorder=vda --append="crashkernel=auto"
part pv.01      --size=30000  --ondisk=vda
volgroup cl pv.01

# /boot
part /boot --ondisk=vda --asprimary --size=1024 --fstype=xfs

# /
# <swap>
logvol swap --fstype=swap --vgname=cl --size=2048 --name=cl_swap
logvol / --vgname=cl  --fstype=xfs  --size=20480 --name=cl_root



